<Window x:Class="Graphium.ViewModels.PreferencesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Graphium.ViewModels"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="Preferences" Height="350" Width="400">
    <Grid Margin="5">
        <GroupBox Header="DataHub Settings" Margin="5">
            <StackPanel Margin="5">
                <Label Content="Capture Device"/>
                <ComboBox ItemsSource="{Binding CaptureDeviceOptions}"
                          SelectedIndex="{Binding SelectedCaptureDevice, Mode=TwoWay}"/>

                <Label Content="UDP Packet Payload Size"/>
                <TextBox Text="{Binding PayloadSize}"/>

                <Label Content="Read Timeout"/>
                <TextBox Text="{Binding ReadTimeout}"/>

                <Label Content="BIOPAC IP Address"/>
                <TextBox Text="{Binding BiopacIPAddress}"/>

                <Label Content="URI"/>
                <TextBox Text="{Binding HttpURI}"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
