<UserControl x:Class="Graphium.Controls.MeasurementTabControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:sp="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
             xmlns:local="clr-namespace:Graphium.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <ToolBar.Resources>
                <Style TargetType="Button">
                    <Setter Property="Width" Value="40"/>
                    <Setter Property="Height" Value="40"/>
                    <Setter Property="Padding" Value="5"/>
                </Style>
            </ToolBar.Resources>
            <Menu>
                <MenuItem Header="Measurement">
                    <MenuItem Header="Save As">
                        <MenuItem Header="CSV" Command="{Binding SaveAsCSVCmd}" />
                    </MenuItem>
                </MenuItem>
            </Menu>
            <Separator />
            <Button Content="Start"
                    Command="{Binding StartMeasurementCmd}"/>
            <Button Content="Stop"
                    Command="{Binding StopMeasurementCmd}"/>
        </ToolBar>

        <ContentControl Content="{Binding PlotControl, Mode=OneTime}"/>
    </DockPanel>
</UserControl>
